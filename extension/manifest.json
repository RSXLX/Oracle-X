{
  "manifest_version": 3,
  "name": "Oracle-X",
  "version": "1.0.0",
  "description": "AI-powered crypto trading FOMO checker - Check before you trade",
  
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage"
  ],
  
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "Oracle-X - FOMO Check"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.binance.com/*",
        "*://*.okx.com/*",
        "*://*.bybit.com/*",
        "*://*.coinbase.com/*",
        "*://*.kraken.com/*",
        "*://*.huobi.com/*",
        "*://*.gate.io/*",
        "*://*.uniswap.org/*",
        "*://app.uniswap.org/*"
      ],
      "js": ["content/platforms.js", "content/vision-analyzer.js", "content/content.js"],
      "css": ["content/styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Capture screenshot and analyze"
    }
  },
  
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "*://*.binance.com/*",
    "*://*.okx.com/*",
    "*://*.bybit.com/*",
    "*://*.coinbase.com/*",
    "*://*.kraken.com/*",
    "*://*.huobi.com/*",
    "*://*.gate.io/*",
    "*://*.uniswap.org/*",
    "*://app.uniswap.org/*"
  ]
}
