{
  "name": "oracle-x-desktop",
  "version": "0.1.0",
  "description": "Oracle-X NoFOMO Desktop - 交易前冷静层",
  "main": "main.js",
  "author": "Oracle-X Team",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.oraclex.nofomo",
    "productName": "Oracle-X NoFOMO",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": ["dmg", "zip"],
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icons"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}
