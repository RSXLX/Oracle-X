{
  "name": "oracle-x-desktop",
  "version": "1.4.0",
  "description": "Oracle-X NoFOMO - AI Trading Assistant",
  "main": "main.js",
  "author": "Oracle-X Team",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder --mac --x64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.oraclex.nofomo",
    "productName": "Oracle-X-NoFOMO",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dir"
      ],
      "icon": "icons/icon.png"
    },
    "files": [
      "*.js",
      "renderer/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "uiohook-napi": "^1.5.4",
    "xlsx": "^0.18.5"
  }
}
