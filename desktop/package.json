{
  "name": "oracle-x-desktop",
  "version": "2.1.0",
  "description": "Oracle-X NoFOMO - AI Trading Assistant",
  "main": "src/main.js",
  "author": "Oracle-X Team",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder --mac --x64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.oraclex.nofomo",
    "productName": "Oracle-X-NoFOMO",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "dir"
      ],
      "icon": "icons/icon.png"
    },
    "dmg": {
      "title": "Oracle-X NoFOMO",
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/icon.png",
      "uninstallerIcon": "icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance",
      "icon": "icons"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      ".env.local"
    ]
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "https-proxy-agent": "^7.0.6",
    "uiohook-napi": "^1.5.4",
    "xlsx": "^0.18.5"
  }
}
